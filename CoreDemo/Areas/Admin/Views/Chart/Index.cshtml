@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div id="chartdiv" style="width:800px; height:600px">
            Buarası Chart Alanıdır.
        </div>
    </div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
     // Fonksiyon Çağrıldığı zaman Çizme işlemi gerçekleştirecek.
     google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(Drawonload);

    function Drawonload()
    {
        $(function(){
            $.ajax({
                     // Burası Önemli Parametreleri gireceğiz.
                type:'GET',
                url:'/Admin/Chart/CategoryChart/',
                 // Çağırma işlemi başarılı ise success devreye girecek.
                success: function(chartsdata) {

                       //objeden JSON listesini çekeceğim.
                    var Data=chartsdata.jsonlist;
                    var data =new google.visualization.DataTable();

                     // 2 Tane Sütun ekliyorum.
                    data.addColumn('string','categoryname');
                    data.addColumn('number','categorycount');

                        // Şimdi Her bir FormData için Grafiğe yansıtmak için döngü
                    for(var i = 0; i < Data.length; i++)
                    {
                        data.addRow([Data[i].categoryname, Data[i].categorycount]);
                    }

                    var chart = new google.visualization.PieChart(document.getElementById('chartdiv'));

                    chart.draw(data,
                        {

                            title:"Google Chart Core Projesi",
                            position: "top",
                            fontsize: "16px"
                        });
                    }
            });
        })
    }

</script>


